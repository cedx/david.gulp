    "david": "^9.0.0"
  },
  "devDependencies": {
    "codacy-coverage": "^2.0.0",
    "del": "^2.2.2",
    "gulp": "^3.9.1",
    "gulp-istanbul": "^1.1.0",
    "gulp-jshint": "^2.0.1",
